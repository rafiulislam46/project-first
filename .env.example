# App mode/plan
MODE=mock
PLAN=free

# Base URL (required for SSLCommerz callbacks in production)
APP_BASE_URL=http://localhost:3000

# Supabase (optional)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Cloudinary (unsigned upload used by client/server)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=

# If using signed upload server-side (optional)
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_CLOUD_NAME=

# Gemini 2.5 Flash
GEMINI_API_KEY=

# Replicate (Virtual Try-On)
REPLICATE_API_TOKEN=
# Optional explicit version for provider.ts flow
REPLICATE_MODEL_VERSION=

# HuggingFace (optional fallback for Try-On)
HF_TOKEN=
HF_TRYON_MODEL=

# SSLCommerz (sandbox/live)
SSLCZ_STORE_ID=
SSLCZ_STORE_PASSWD=
SSLCZ_MODE=sandbox
SSLC_SANDBOX=true